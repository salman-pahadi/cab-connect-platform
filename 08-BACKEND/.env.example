# Database
DATABASE_URL=postgresql+psycopg2://appuser:appsecret@localhost:5432/appdb
DATABASE_TEST_URL=postgresql+psycopg2://appuser:appsecret@localhost:5432/appdb_test

# Redis
REDIS_URL=redis://localhost:6379/0

# Application
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=1.0.0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# External Services (Phase 1: Not used yet - placeholders)
SMS_API_KEY=
SMS_SENDER=CABCONNECT
GOOGLE_MAPS_API_KEY=

# Email Configuration
EMAIL_PROVIDER=resend  # Options: resend, sendgrid, ses, smtp
EMAIL_FROM=noreply@fijicabconnect.com
EMAIL_FROM_NAME=Cab Connect

# Resend Configuration (Recommended - Free tier: 100 emails/day)
RESEND_API_KEY=

# SendGrid Configuration (Alternative)
SENDGRID_API_KEY=

# AWS SES Configuration (Alternative)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP Configuration (Fallback)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
